@model ErrorViewModel
@{
    ViewData["Title"] = Model.StatusCode == 404 ? "Page Not Found" : "Error";
}

@if (Model.StatusCode == 404)
{
  <div class="text-center py-5">
    <h1 class="display-1 fw-bold" style="color: #6c757d;">404</h1>
    <h2 class="mb-4">Page Not Found</h2>
    <p class="lead mb-4">
      Sorry, the page you're looking for doesn't exist or has been moved.
    </p>
    <div class="d-flex justify-content-center gap-3">
      <a asp-controller="Search" asp-action="Index" class="btn btn-primary btn-lg">
        Go to Home
      </a>
    </div>
  </div>
}
else
{
  <div class="text-center py-5">
    <h1 class="text-danger">Error</h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>

    @if (Model.ShowRequestId)
    {
      <p class="mt-3">
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
      </p>
    }

    <div class="mt-4">
      <a asp-controller="Search" asp-action="Index" class="btn btn-primary">
        <i class="fas fa-home me-2"></i>Return to Home
      </a>
    </div>
  </div>
}