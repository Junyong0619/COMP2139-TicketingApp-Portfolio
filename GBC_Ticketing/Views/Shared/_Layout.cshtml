<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - GBC TICKETS</title>
    <script type="importmap"></script>
    <link rel="icon" type="image/png" href="~/images/ticket-icon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    <link rel="stylesheet" href="~/GBC_Ticketing.styles.css" asp-append-version="true"/>
</head>
<body data-bs-theme="dark">
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark mb-3">
      <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Search" asp-action="Index">GBC TICKETS</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav flex-grow-1 align-items-center gap-2">
            <li class="nav-item">
              <a class="nav-link" asp-area="" asp-controller="Search" asp-action="Index">Search Events</a>
            </li>
            @await Html.PartialAsync("_NavManageLinks")
          </ul>
          @await Html.PartialAsync("_LoginPartial")
        </div>
      </div>
    </nav>
  </header>
  
  <main role="main" class="pb-3">
    <div class="container">
      @RenderBody()
    </div>
  </main>

  <footer class="footer text-muted">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <p>&copy; 2025 - COMP 2139 - GBC TICKETS</p>
        </div>
        <div class="col-md-8 text-end">
          <p><strong>Team Members</strong></p>
          <div class="small">
            <div>Joosung Ahn (Student ID: 101539659)</div>
            <div>Kiana Sepasian (Student ID: 101475855)</div>
            <div>Junyong Choi (Student ID: 101539862)</div>
          </div>
        </div>
      </div>
    </div>
  </footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>