@model GBC_Ticketing.Models.ErrorViewModel
@{
  ViewData["Title"] = "Server Error";
}

<section class="py-5 text-center">
  <div class="container">
    <div class="mb-4">
      <i class="fas fa-server fa-4x text-warning"></i>
    </div>
    <h1 class="display-4 mb-3">500 - Something went wrong.</h1>
    <p class="lead text-secondary">Our team has been notified. Please try again later or return to the events page.</p>
    <div class="mt-4">
      <a asp-controller="Search" asp-action="Index" class="btn btn-outline-light btn-lg">
        Return to Events
      </a>
    </div>
  </div>
</section>
