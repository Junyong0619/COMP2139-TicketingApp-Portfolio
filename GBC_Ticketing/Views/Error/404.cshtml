@model GBC_Ticketing.Models.ErrorViewModel
@{
  ViewData["Title"] = "Page Not Found";
}

<section class="py-5 text-center">
  <div class="container">
    <div class="mb-4">
      <i class="fas fa-compass fa-4x text-danger"></i>
    </div>
    <h1 class="display-4 mb-3">404 Page not found.</h1>
    <p class="lead text-secondary">We couldn't find the page you're looking for. It might have been removed or never existed.</p>
    <div class="mt-4">
      <a asp-controller="Search" asp-action="Index" class="btn btn-primary btn-lg">
        Return
      </a>
    </div>
  </div>
</section>
