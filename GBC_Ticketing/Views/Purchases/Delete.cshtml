@model GBC_Ticketing.Models.Purchase

<h2>Delete Purchase</h2>

<div>
    <h4>Are you sure you want to delete this purchase?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Guest Name</dt>
        <dd class="col-sm-10">@Model.GuestName</dd>

        <dt class="col-sm-2">Guest Email</dt>
        <dd class="col-sm-10">@Model.GuestEmail</dd>

        <dt class="col-sm-2">Event Id</dt>
        <dd class="col-sm-10">@Model.EventId</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Total Cost</dt>
        <dd class="col-sm-10">@Model.TotalCost</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="PurchaseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>