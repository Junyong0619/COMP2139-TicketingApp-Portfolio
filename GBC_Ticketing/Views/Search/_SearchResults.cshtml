@model IEnumerable<GBC_Ticketing.Models.Event>

@if (Model.Any())
{
  <div class="row" id="searchResultsGrid">
    @foreach (var item in Model)
    {
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card event-card h-100">
          <a asp-action="Details" asp-controller="Search" asp-route-id="@item.EventId" class="text-decoration-none">
            <img src="@(!string.IsNullOrEmpty(item.ImagePath) ? item.ImagePath : "/images/no-image.svg")"
                 class="card-img-top"
                 alt="@item.Title"
                 loading="lazy"
                 onerror="this.src='/images/no-image.svg';">
            <div class="card-header">
              <h5 class="card-title text-truncate">@item.Title</h5>
              <span class="text-gray small">
                <i class="fas fa-map-marker-alt me-1"></i>@item.Address
              </span>
            </div>
            <div class="card-body">
              <div class="mb-2">
                <span class="badge bg-secondary">@item.Category?.Name</span>
              </div>
              <div class="mb-2">
                <span>@item.StartAt.ToString("yyyy-MM-dd HH:mm")</span>
              </div>
              <div class="mb-2">
                <strong>Price:</strong>
                <span class="price-text">$@item.Price.ToString("0.00")</span>
              </div>
              <div class="mb-2">
                <strong>Tickets:</strong>
                @if (item.RemainingTickets == 0)
                {
                  <span class="text-danger fw-bold">Sold Out</span>
                }
                else if (item.RemainingTickets <= 5)
                {
                  <span class="text-danger fw-semibold">
                    @item.RemainingTickets / @item.AvailableTickets Available
                  </span>
                }
                else
                {
                  <span class="tickets-text">
                    @item.RemainingTickets / @item.AvailableTickets Available
                  </span>
                }
              </div>
              @if (!string.IsNullOrEmpty(item.Description))
              {
                <div>
                  <p class="text-gray small event-description mb-1">
                    @item.Description
                  </p>
                  <span class="view-more-link">
                    View more <i class="fas fa-arrow-right ms-1"></i>
                  </span>
                </div>
              }
            </div>
          </a>
          <div class="card-footer">
            <div class="btn-group w-100" role="group">
              <a asp-action="Create" asp-controller="Purchases" asp-route-eventId="@item.EventId" class="btn btn-primary w-100">
                Purchase Tickets
              </a>
            </div>
          </div>
        </div>
      </div>
    }
  </div>
}
else
{
  <div class="text-center py-5">
    <div class="mb-4">
      <i class="fas fa-search fa-5x text-muted"></i>
    </div>
    <h4 class="text-muted">No events match your search criteria</h4>
    <p class="text-muted">Try adjusting your filters or search terms.</p>
  </div>
}
